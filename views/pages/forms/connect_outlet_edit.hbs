



<!-- Page Loader -->
<div class="page-loader-wrapper">
    <span class="loader"><span class="loader-inner"></span></span>
</div>

<div id="app">
    <div class="main-wrapper main-wrapper-1">
        <div class="navbar-bg"></div>

{{>nav}}
{{>sidemenu}}
        <!-- Start app main Content -->
        <div class="main-content">
            <section class="section">
                <div class="section-header">
                    <h1>Edit Outlets</h1>
                    
                </div>

                <div class="section-body">
                    <h2 class="section-title">Edit Outlet Details</h2>
                   

                    <div class="row">
                        <div class="col-12 col-md-12 col-lg-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4>Outlet Details</h4>
                                </div>
                                <div class="card-body">
                                    <!--Starting point for forms-->
                                    <form action="/connect/connectoutlets_edit/{{data._id}}" method="POST" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label>Name Of Shop</label>
                                        <input type="text" name="name" class="form-control" value="{{data.shop_name}}">
                                    </div>
                                    <div class="form-group">
                                        <label>Contact Number</label>
                                        <input type="text" name="phoneNumber" class="form-control" value="{{data.contact}}">
                                    </div>
                                     
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="email" name="email" class="form-control" value="{{data.email}}">
                                    </div>

                                     <div class="form-group">
                                        <label>Area Location</label>
                                        <input type="text" name="location" class="form-control" value="{{data.area_location}}">
                                    </div>
                                    <div class="form-group">
                                        <label>Shop Type</label>
                                        <select class="form-control" name="shop_type" value="{{data.shop_type}}">
                                            <option value="hyper market">Hyper Market</option>
                                            <option value="super market">Super Market</option>
                                            <option value="mini mart">Mini Mart</option>
                                            <option value="kiosk">kiosk</option>
                                            <option value="super Market">Pharmacy Mart</option>
                                           
                                        </select>
                                    </div>
                                   
                                    

                                    <div class="card-footer text-right">
                                    <button class="btn btn-primary mr-1" type="submit">Edit</button>
                     
                                    </div>


                                    
                                    </form>
                                </div>
                            </div>
                            
                           
                        </div>
                   
                    </div>
                </div>
            </section>
        </div>
        
        <!-- Start app Footer part -->
        {{>footer}}
    </div>
</div>

